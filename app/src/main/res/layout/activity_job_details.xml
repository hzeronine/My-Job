<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/detail_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginHorizontal="20dp"
            android:text="Job details"
            android:textColor="#FE7235"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/detail_btn_Saved"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingHorizontal="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/detail_img_btn_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="15dp"
            app:srcCompat="@drawable/img_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/detail_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duy Tan University Duy Tan University Duy Tan University Duy Tan University"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_txt_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Company: DuyTanUniversity"
                />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General information"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="#FE7235"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#FE5722"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/baseline_attach_money_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary" />

                    <TextView
                        android:id="@+id/detail_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/people"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Career" />

                    <TextView
                        android:id="@+id/detail_career"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/img_kn"
                    android:backgroundTint="#FE5722"
                    android:layout_marginRight="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Work experience" />

                    <TextView
                        android:id="@+id/detail_work_exp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/position"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialized" />

                    <TextView
                        android:id="@+id/detail_specialized"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/location"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address" />

                    <TextView
                        android:id="@+id/detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/baseline_edit_calendar_24"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job posting date" />

                    <TextView
                        android:id="@+id/detail_job_posting_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/time"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expiration date" />

                    <TextView
                        android:id="@+id/detail_expriation_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 days from the date of posting"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/heart"
                    android:backgroundTint="#FE5722"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Interest" />

                    <TextView
                        android:id="@+id/detail_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thỏa thuận"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="#BDBDBD" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job description"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/detail_jobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A tool that explains the tasks, duties, function and responsibilities of a position."
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/detail_applyNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Now"
                android:layout_margin="15dp"
                android:backgroundTint="#FE5722"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>